{{!-- <!-- Modal For Adding a Car--> --}}
<div class="modal fade" id="add-auto-modal" tabindex="-1" role="dialog" aria-labelledby="add-auto-modal-title"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog" role="document">
        <div class="modal-content card-color">
            <div class="modal-header">
                <h1 class="modal-title" id="add-auto-modal-title">Add Vehicle</h1>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <form method="POST" class="upload-form row" action="/api/autos" enctype="multipart/form-data">
                            {{!-- add image form here --}}
                            <div class="image-btn col-md-12 ml-auto justify-content-md-center ">
                                <label>Select your Vehicle Image:</label> <br>
                                <input type="file" name="image" required>
                            </div>
                            <div class="col-md-6 ml-auto">
                                <input type="text" id="make" name="make" placeholder="Make" required>
                                <input type="text" id="model" name="model" placeholder="Model" required>
                                <input type="text" id="year" name="year" placeholder="Year" required>
                                <input type="text" id="color" name="color" placeholder="Color" required>
                                <input type="text" id="vin" name="vin" placeholder="VIN" required>
                                <input type="text" id="license-plate" name="license-plate"
                                    placeholder="License Plate Number" required>
                            </div>
                            <div class="col-md-6 ml-auto">
                                <input type="text" id="tolltag-number" name="tolltag-number"
                                    placeholder="TollTag Number">
                                <input type="text" id="insurance-expiration" name="insurance-expiration"
                                    placeholder="Insurance Expiration" required>
                                <input type="text" id="registration-expiration" name="registration-expiration"
                                    placeholder="Registration Expiration" required>
                                <input type="text" id="purchase-mileage" name="purchase-mileage"
                                    placeholder="Purchase Mileage">
                                <input type="text" id="oil-change-mileage" name="oil-change-mileage"
                                    placeholder="Oil Change Mileage">
                                <input type="text" id="tire-change-mileage" name="tire-change-mileage"
                                    placeholder="Tire Change Mileage">
                            </div>
                            <div class="row ">
                                <div class="col-md-6 ml-auto">
                                    <label for="Drivers">Choose a Driver:</label>
                                    <select name="driver" id="driver">
                                        {{#each drivers}}
                                        <option value='{{this.id}}'>
                                            {{this.first_name}} {{this.last_name}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                                <div class="col-md-6 ml-auto">
                                    <button type="submit" class="btn" id="add-vehicle" value="Add Vehicle"><i
                                            class="fal fa-plus-square fa-lg"> Add <i
                                                class="fal fa-cars fa-lg"></i></i></button>
                                    <button type="button" class="btn btn-danger " data-dismiss="modal">Cancel</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>