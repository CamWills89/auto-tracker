{{!-- <!-- Modal For Adding a Car--> --}}
<div class="modal fade" id="add-auto-modal" tabindex="-1" role="dialog" aria-labelledby="add-auto-modal-title"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog" role="document">
        <div class="modal-content card-color">
            <div class="modal-header">
                <h1 class="modal-title" id="add-auto-modal-title">Add Vehicle</h1>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <form method="POST" class="upload-form row" action="/api/autos" enctype="multipart/form-data">
                            {{!-- add image form here --}}
                            <div class="image-btn col-md-12 ml-auto justify-content-md-center ">
                                <label>Select your Vehicle Image:</label> <br>
                                <input type="file" name="image" required>
                            </div>
                            <div class="col-md-6 ml-auto">
                                <label for="make" class="display-label">Make:</label>
                                <input type="text" id="make" name="make" value="" required>
                                <label for="model" class="display-label">Model:</label>
                                <input type="text" id="model" name="model" value="" required>
                                <label for="year" class="display-label">Year:</label>
                                <input type="text" id="year" name="year" value="" required>
                                <label for="color" class="display-label">Color:</label>
                                <input type="text" id="color" name="color" value="" required>
                                <label for="vin" class="display-label">VIN:</label>
                                <input type="text" id="vin" name="vin" value="" required>
                                <label for="license-plate" class="display-label">License Plate:</label>
                                <input type="text" id="license-plate" name="license-plate" value="" required>
                            </div>
                            <div class="col-md-6 ml-auto">
                                <label for="tolltag-number" class="display-label">TollTag Number:</label>
                                <input type="text" id="tolltag-number" name="tolltag-number" value="" required>
                                <label for="insurance-expiration" class="display-label">Insurance Expiration:</label>
                                <input type="text" id="insurance-expiration" name="insurance-expiration" value="" required>
                                <label for="registration-expiration" class="display-label">Registration
                                    Expiration:</label>
                                <input type="text" id="registration-expiration" name="registration-expiration" value="" required>
                                <label for="purchase-mileage" class="display-label">Purchase Mileage:</label>
                                <input type="text" id="purchase-mileage" name="purchase-mileage" value="" required>
                                <label for="oil-change-mileage" class="display-label">Oil Change Mileage:</label>
                                <input type="text" id="oil-change-mileage" name="oil-change-mileage" value="" required>
                                <label for="tire-change-mileage" class="display-label">Tire Change Mileage: </label>
                                <input type="text" id="tire-change-mileage" name="tire-change-mileage" value="" required>
                            </div>
                            <div class="row ">
                                <div class="col-md-6 ml-auto">
                                    <label for="Drivers">Choose a Driver:</label>
                                    <select name="driver" id="driver">
                                        {{#each autos}}
                                        <option value='{{this.driver_id}}'>
                                            {{this.driver.first_name}} {{this.driver.last_name}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                                <div class="col-md-6 ml-auto">
                                    <input type="submit" class="btn" id="add-vehicle" value="Add Vehicle" />
                                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>