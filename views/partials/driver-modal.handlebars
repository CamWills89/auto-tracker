{{!-- /////////////////////////////////////////////////////////////////////////////////////////////////////////////
      <!-- Modal For Adding a Driver--> --}}

<div class="modal fade" id="add-driver-modal" tabindex="-1" role="dialog" aria-labelledby="add-driver-modal-title"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" role="document">
        <div class="modal-content card-color">
            <div class="modal-header">
                <h1 class="modal-title" id="add-auto-modal-title">Add Driver</h1>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <form action="">
                            <label for="make" class="display-label">First Name:</label>
                            <input type="text" id="first_name" name="first_name" value="">
                            <label for="model" class="display-label">Last Name:</label>
                            <input type="text" id="last_name" name="last_name" value="">
                            <label for="year" class="display-label">Relation:</label>
                            <input type="text" id="relation" name="relation" value="">
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn" id="add-driver">Add Driver</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

<script src="javascript/add-driver.js"></script>