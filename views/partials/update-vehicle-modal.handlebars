{{!-- <!-- Modal For Adding a Car--> --}}
<div class="modal fade" id="update-auto-modal-{{this.id}}" tabindex="-1" role="dialog"
    aria-labelledby="add-auto-modal-title" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog" role="document">
        <div class="modal-content card-color">
            <div class="modal-header">
                <h1 class="modal-title" id="add-auto-modal-title">Update {{this.make}} <span>{{this.model}}</span></h1>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <form method="PUT" class="upload-form row" action="/api/autos/{{this.id}}"
                            enctype="multipart/form-data">
                            {{!-- add image form here --}}
                            <div class="image-btn col-md-12 ml-auto justify-content-md-center ">
                                <label>Select your Vehicle Image:</label> <br>
                                <input type="file" name="image" required>
                            </div>
                            <div class="col-md-6 ml-auto">
                                <input type="text" id="insurance-expiration" name="insurance-expiration"
                                    placeholder="Insurance Expiration" required>
                                <input type="text" id="registration-expiration" name="registration-expiration"
                                    placeholder="Registration Expiration" required>
                                <input type="text" id="purchase-mileage" name="purchase-mileage"
                                    placeholder="Purchase Mileage">
                                <input type="text" id="oil-change-mileage" name="oil-change-mileage"
                                    placeholder="Oil Change Mileage">
                                <input type="text" id="tire-change-mileage" name="tire-change-mileage"
                                    placeholder="Tire Change Mileage">
                            <div>
                            </div>
                            </div>
                                <div class="col-md-6 ml-auto">
                                    <input type="submit" class="btn" id="add-vehicle" value="Update Vehicle" />
                                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                                </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>