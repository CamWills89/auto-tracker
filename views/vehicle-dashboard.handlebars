<body>
    <header>
        <nav class="nav nav-pills flex-column flex-sm-row">
            <h1>AUTO TRACKER</h1>
            <!-- <a class="nav-item flex-sm-fill text-sm-center nav-link" href="#">Home</a> -->
            <a class="nav-item flex-sm-fill text-sm-center nav-link" href="#">Driver Dashboard</a>
            <a class="nav-item flex-sm-fill text-sm-center justify-content-end nav-link" href="#">Logout</a>
        </nav>
    </header>

    <h3 class="d-flex justify-content-md-center">Vehicle Dashboard</h3>

    <div class="d-flex justify-content-md-center">
        <button class="btn btn-dark btn-lg btn-rounded btn-elegant w-25 add-vehicle">+ Add Vehicle</button>
    </div>

    <div class="container card-form">
        <div class="row d-flex justify-content-md-center h-100">
            <div class="col-sm-4 m-4 align-items-center card ">
                <div class="card-header">
                    <H2>{{}}</H2>
                </div>
                <div class="card-body">
                    <img src="https://via.placeholder.com/150" alt="">
                    <h4>Make: {{}}</h4>
                    <h4>Model: {{}}</h4>
                    <h4>Year: {{}}</h4>
                    <h4>Driver: {{}}</h4>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
        integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
        crossorigin="anonymous"></script>
