{{!-- /////////////////////////////////////////////////////////////////////////////////////////////////////////
       Handle bars for the 'vehicle' dashboard page --}}
<div class="container card-form">

    <div class="row d-flex justify-content-md-center h-100">
        {{#each this}}
        {{log this }}
        {{#if this.id}}
        <div class="col-sm-4 m-4 align-items-center card card-cursor" data-toggle="modal"
            data-target="#view-auto-modal" id={{this.id}}>
            <div class="card-header" >
                <H2>Vehicle: {{this.id}}</H2>
            </div>
            <div class="card-body">
                <img src="https://via.placeholder.com/150" alt="">
                <h4>Make: {{this.make}}</h4>
                <h4>Model: {{this.model}}</h4>
                <h4>Year: {{this.year}}</h4>
                <h4>Driver: {{this.driver.first_name}} {{this.driver.last_name}} </h4>
            </div>
        </div>

        {{!-- ////////////////////////////////////////////////////////////////////////////// --}}
        {{!-- <!--  Add the setup for the 'vehicle modal'  --> --}}

        <div class="modal fade" id="view-auto-modal" tabindex="-1" role="dialog" aria-labelledby="view-auto-modal-title"
            aria-hidden="true">

            <div class="modal-dialog modal-dialog-centered " role="document">
                <div class="modal-content card-color">
                    <div class="modal-header">
                        <h1 class="modal-title" id="view-auto-modal-title">Vehicle {{this.id}}</h1>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="container-fluid">
                            <div class="row">

                                <div class="col-md-6 ml-auto">

                                    <img src="https://via.placeholder.com/200" alt="">
                                    <h4>Make: {{this.make}}</h4>
                                    <h4>Model: {{this.model}}</h4>
                                    <h4>Year: {{this.year}}</h4>
                                    <h4>Color: {{this.color}}</h4>

                                </div>
                                <div class="col-md-6 ml-auto">
                                    <h5>VIN: {{this.vin}}</h5>
                                    <h5>License Plate: {{this.license_plate}}</h5>
                                    <h5>TollTag Number: {{this.toll_tag}}</h5>
                                    <h5>Insurance Expiration: {{this.insurance_expiration}}</h5>
                                    <h5>Registration Expiration: {{this.registration_expiration}}</h5>
                                    <h5>Purchase Mileage: {{this.mileage}}</h5>
                                    <h5>Oil Change Mileage: {{this.oil_mileage}}</h5>
                                    <h5>Tire Change Mileage: {{this.tire_mileage}}</h5>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary">Save changes</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Delete</button>
                    </div>
                </div>
            </div>
        </div>
        {{/if}}
        {{/each}}
    </div>

</div>


{{!-- <!-- Modal For Adding a Car--> --}}
<div class="modal fade" id="add-auto-modal" tabindex="-1" role="dialog" aria-labelledby="add-auto-modal-title"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" role="document">
        <div class="modal-content card-color">
            <div class="modal-header">
                <h1 class="modal-title" id="add-auto-modal-title">Add Vehicle</h1>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <form action="">
                            <label for="make">Make:</label><br>
                            <input type="text" id="make" name="make" value=""><br>
                            <label for="model">Model:</label><br>
                            <input type="text" id="model" name="model" value=""><br>
                            <label for="year">Year:</label><br>
                            <input type="text" id="year" name="year" value=""><br>
                            <label for="color">Color:</label><br>
                            <input type="text" id="color" name="color" value=""><br>
                            <label for="vin">VIN:</label><br>
                            <input type="text" id="vin" name="vin" value=""><br>
                            <label for="license-plate">License Plate:</label><br>
                            <input type="text" id="license-plate" name="license-plate" value=""><br>
                            <label for="tolltag-number">TollTag Number:</label><br>
                            <input type="text" id="tolltag-number" name="tolltag-number" value=""><br>
                            <label for="insurance-expiration">Insurance Expiration:</label><br>
                            <input type="text" id="insurance-expiration" name="insurance-expiration" value=""><br>
                            <label for="color">Registration Expiration:</label><br>
                            <input type="text" id="registration-expiration" name="registration-expiration" value=""><br>
                            <label for="color">Purchase Mileage:</label><br>
                            <input type="text" id=purchase-mileage name="purchase-mileage" value=""><br>
                            <label for="color">Oil Change Mileage:</label><br>
                            <input type="text" id="oil-change-mileage" name="oil-change-mileage" value=""><br>
                            <label for="color">Tire Change Mileage: </label><br>
                            <input type="text" id="tire-change-mileage" name="tire-change-mileage" value="">
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary">Save changes</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Delete</button>
            </div>
        </div>
    </div>
</div>